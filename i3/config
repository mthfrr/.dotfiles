        font pango:DejaVu Sans Mono 9

        separator_symbol "|"

        workspace_buttons yes
        strip_workspace_numbers yes

        colors {
            separator #b16185
            background #272727
            # text color
            statusline #ebdbb2
            # colorclass       <border> <background> <text>
            # focused_workspace  #b16185    #272727   #b16185
            focused_workspace  #272727    #272727   #b16185
            active_workspace   #272727    #272727   #ebdbb2
            inactive_workspace #272727    #272727   #ebdbb2
            urgent_workspace   #cc231c    #272727   #ebdbb2
        }
}

