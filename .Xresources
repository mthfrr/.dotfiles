!URxvt*.background: #202020
URxvt*.background: #252525
*foreground: #ebdbb2
! Black + DarkGrey
*color0:  #282828
*color8:  #928374
! DarkRed + Red
*color1:  #cc241d
*color9:  #fb4934
! DarkGreen + Green
*color2:  #98971a
*color10: #b8bb26
! DarkYellow + Yellow
*color3:  #d79921
*color11: #fabd2f
! DarkBlue + Blue
*color4:  #458588
*color12: #83a598
! DarkMagenta + Magenta
*color5:  #b16286
*color13: #d3869b
! DarkCyan + Cyan
*color6:  #689d6a
*color14: #8ec07c
! LightGrey + White
*color7:  #a89984
*color15: #ebdbb2

! URxvt Appearance
URxvt.font:xft:Monospace:DejaVuSansMono:pixelsize=11

! Font to Fira Code Retina
! URxvt.font: xft:Fira Code Retina:style=Retina:pixelsize=11

! Set Bold Font to Fira Code Bold
! URxvt.boldFont: xft:Fira Code:style=Bold:pixelsize:11

! Set Italics Font to Fira Code Light
! URxvt.italicFont: xft:Fira Code:style=Light:pixelsize:11

URxvt.letterSpace: 0
URxvt.lineSpace: 0
URxvt.internalBorder: 3
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.saveline: 9000
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.urgentOnBell: true
URxvt.depth: 32
URxvt.iso14755: false

URxvt.perl-ext-common: default,matcher
URxvt.urlLauncher: firefox

URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
