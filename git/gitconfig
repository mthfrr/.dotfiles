[user]
	email = mathieu.fourre@epita.fr
	name = Mathieu Fourre
[core]
	editor = nvim
[push]
	autoSetupRemote = true
[alias]
	a = add
	u = add -u
	b = branch
	c = commit -S -m
  cu = commit -S -a -m
	ca = commit -S --amend
	t = tag -s -m "-" -a
	p = push --follow-tags
	pu = pull
	co = checkout
	r = reset
	s = status
	l = log -10 --oneline --graph

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
